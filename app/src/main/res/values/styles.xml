<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.ToolBar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColorSecondary"> @android:color/black</item>
        <item name="android:textColorPrimary"> @android:color/black</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="myTexts">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/pad_10</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myTexts.white">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myTexts.center">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="myTexts.center.white">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_red</item>
        <item name="android:padding">@dimen/pad_10</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="layout">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="myTexts.edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="form_holder">
        <item name="android:padding">@dimen/pad_10</item>
        <item name="android:layout_marginStart">@dimen/pad_30</item>
        <item name="android:layout_marginEnd">@dimen/pad_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round</item>
        <item name="android:elevation">@dimen/pad_10</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/pad_60</item>
    </style>

    <style name="button_holder">
        <item name="android:layout_marginBottom">@dimen/pad_60</item>
        <item name="android:layout_marginStart">@dimen/pad_30</item>
        <item name="android:layout_marginEnd">@dimen/pad_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fragment">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MyAlertTextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowBackground">@drawable/round</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
    </style>

</resources>
